generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Especialidade {
  CARDIOLOGIA
  DERMATOLOGIA
  ORTOPEDIA
  PEDIATRIA
  GINECOLOGIA
}

model Medico {
  id            String       @id @default(cuid())
  nome          String
  crm           String
  conselho      String
  especialidade Especialidade
}
